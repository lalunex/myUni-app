.news_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 250rpx;
  margin: 20rpx 0;
  border: 1px solid #eee;
  -webkit-box-shadow: 0 0 15rpx black;
          box-shadow: 0 0 15rpx black;
}
.news_item .news_item-img {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
}
.news_item .news_item-text {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  overflow: hidden;
  position: relative;
}
.news_item .news_item-text .news_item-text-title {
  font-size: 30rpx;
  text-align: center;
  padding: 20rpx;
}
.news_item .news_item-text .news_item-text-other {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding: 20rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.news_item .news_item-text .news_item-text-other text:nth-child(1) {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}
.news_item .news_item-text .news_item-text-other text:nth-of-type(2) {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

